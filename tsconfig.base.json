{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "NodeNext"
  , "moduleResolution": "NodeNext"
  , "strict": true
  , "noUnusedLocals": false
  , "noUnusedParameters": false
  , "esModuleInterop": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@manager/*": ["src/manager/*"]
    , "@utils/*": ["src/utils/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
